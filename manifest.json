{
    "manifest_version": 2,
    "name": "Email Matcher",
    "version": "1.0",
    "description": "Searches for matching emails on a page and stores them if found.",
    "permissions": ["activeTab", "tabs", "scripting"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Start Email Search"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  